<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.fragments.QuizFragment">

    <TextView
        android:id="@+id/txtQuestionId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="40dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#3B978C"
        android:drawableRight="@android:drawable/ic_media_play"
        android:fontFamily="@font/oswald_regular"
        android:shadowColor="#0000796B"
        android:text="NEXT"
        android:textSize="20dp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="#6B9893"
        app:strokeWidth="2sp" />

    <Button
        android:id="@+id/btnHome"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#D66565"
        android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
        android:fontFamily="@font/oswald_regular"
        android:rotationY="0"
        android:shadowColor="#00FFFFFF"
        android:text="HOME"
        android:textSize="20dp"
        app:cornerRadius="10dp"
        app:iconPadding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#D32F2F" />

    <LinearLayout
        android:id="@+id/layoutAnswers"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtQuestionId"></LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>